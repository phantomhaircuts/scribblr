<h2>Edit Post</h2>
<div class= "form">
<%= form_for @post do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit %>
<% end %>
</div>

<div>
<%= link_to 'delete', post_path(@post), method: :delete, class: 'delete' %>
</div>
